<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Fabrikam_Food"
             x:Class="Fabrikam_Food.LoginPage" 
             Title="Fabrikam Food">
  <ContentPage.Content>
    <StackLayout Spacing="0" x:Name="layout">
      <Label Text="Fabrikam Food" VerticalOptions="StartAndExpand" FontSize="80"
        HorizontalOptions="Center" />
      <Label x:Name="helloUser" FontSize="40" FontAttributes="Bold" />
      <Button x:Name="loginButton" Text="Sign-in with Facebook" MinimumHeightRequest="30"
        Clicked="loginButton_Clicked"/>
      <Button x:Name="ProceedButton" Text="Continue" MinimumHeightRequest="30" IsVisible="false"
        Clicked="proceedButton_Clicked"/>
      <BoxView VerticalOptions="EndAndExpand"
        HorizontalOptions="FillAndExpand" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>
