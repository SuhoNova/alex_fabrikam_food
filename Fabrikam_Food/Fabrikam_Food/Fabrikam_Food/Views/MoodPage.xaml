<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fabrikam_Food.Views.MoodPage"
             Title="Fabrikam Food">
  <ContentPage.Content>
    <StackLayout BackgroundColor="White">
      <Button Text="Back" TextColor="White" BackgroundColor="Red" Command="{Binding GoHomeCommand}" />
      <Button Text="Take Photo!" TextColor="White" BackgroundColor="Green" Clicked="TakePicture_Clicked"/>
      <Label x:Name="errorLabel" />
      <Label x:Name="moodLabel" FontSize="25" FontAttributes="Bold" />
      <Label x:Name="suggestionLabel" FontSize="25" FontAttributes="Bold" />
      <ActivityIndicator x:Name="UploadingIndicator" Color="Red" IsRunning="false" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>